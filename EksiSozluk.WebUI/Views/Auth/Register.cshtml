@model RegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="contanier">
    <div class="container-fluid">
        <div class="col-12 m-4">
            <div class="col-12 mb-4">
                <h4>yeni kullanıcı kaydı</h4>
            </div>
            <form asp-action="Register" method="post">
                <div class="col-10">
                    <div class="col-lg-6">

                        <div class="col-12 mb-2 mt-2">
                            <label class="col-12 mb-2 mt-2">nick</label>
                            <input class="col-12 py-1" type="text" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-2">
                            <label class="col-12 mb-2 mt-2">e-mail adresi</label>
                            <input class="col-12 py-1" type="text" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-2">
                            <label class="col-12 mb-2">doğum tarihi</label>
                            <input type="date" class="col-8 py-1" id="date" asp-for="BirthDate">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-4 mt-2">
                            <label class="col-12 mb-2">cinsiyet</label>
                            <div class="col-8">
                                <select class="form-select" asp-for="Gender">
                                    <option value="">seçiniz</option>
                                    <option value="erkek">erkek</option>
                                    <option value="kadın">kadın</option>
                                    <option value="diğer">diğer</option>
                                </select>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="col-12 mt-2 mb-2">
                            <p class="col-11" style="color:#333333;">
                                <i class="col-1 bi bi-exclamation-triangle"></i>
                                hesap güvenliğiniz açısından şifrenizin <b>
                                    diğer sitelerde kullandığınız
                                    şifrelerden farklı olmasını
                                </b> tavsiye ederiz.
                            </p>
                        </div>

                        <div class="col-12 mb-2">
                            <label class="col-12 mb-2">şifre</label>
                            <input class="col-12 py-1" type="password" asp-for="Password" />
                            <div class="col-3" style="color:#888888; font-size:small;">
                                şifre en az 8 karakter
                                en az bir büyük harf
                                bir küçük harf
                                rakam içermelidir.
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="col-12 mb-2">
                            <label class="col-12 mb-2">şifre tekrar</label>
                            <input class="col-12 py-1" type="password" asp-for="PasswordAgain" />
                            <div class="col-3" style="color:#888888; font-size:small;">
                                en az 1 küçük harf
                                en az 1 büyük harf
                                en az 1 rakam
                                en az 8 karakter
                            </div>
                            <span asp-validation-for="PasswordAgain" class="text-danger"></span>
                        </div>

                        <div class="form-check mt-4 mb-4">
                            <input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for="isAggrCheck">
                            <label class="form-check-label" for="flexCheckDefault">
                                ekşi sözlük kullanıcı sözleşmesini okudum ve kabul ediyorum
                            </label>
                        </div>
                        <span asp-validation-for="isAggrCheck" class="text-danger"></span>

                        <div class="col-12 mb-2">
                            <button class="btn btn-eksi white col-12 py-2" type="submit">kayıt ol işte böyle</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>