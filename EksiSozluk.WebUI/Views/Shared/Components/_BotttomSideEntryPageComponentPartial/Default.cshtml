@using Microsoft.AspNetCore.Http
@using System.Security.Claims
@model List<TitleWithEntryDto>

@{
    var userId = Context.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

@if (Model != null)
{
    <div class="container-fluid">
        <div class="row mt-4">
            @foreach (var titleWithEntryDto in Model)
            {
                <div class="col">
                    <h5>
                        <a href="#" type="button" class="entry-title">@titleWithEntryDto.TitleName</a>
                    </h5>
                </div>

                <div class="row">
                    <p>
                        @titleWithEntryDto.EntryContent
                    </p>
                </div>


                <div class="row">
                    <!-- Sol taraftaki elemanlar -->
                    <div class="col-8 d-flex justify-content-start">
                        <div class="row">
                            <div class="col">
                                <a href="#" type="button"><i class="bi bi-arrow-up-square up"></i></a>
                            </div>
                            <div class="col">
                                <a href="#" type="button"><i class="bi bi-arrow-down-square down"></i></a>
                            </div>
                            <div class="col">
                                <a href="#" type="button"><i class="bi bi-droplet fav" id="icon"></i></a>
                            </div>
                            <div class="col">
                                <a href="#" type="button" class="entry-number">250</a>
                            </div>
                        </div>
                    </div>
                    <!-- Sağ taraftaki elemanlar -->
                    <div class="col-4 d-flex justify-content-end">
                        <div class="row">
                            <div class="col d-flex justify-content-center align-items-center auth-entrance-link dropdown pe-2">
                                <a class="auth-entrance-link-text pb-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    ⍏
                                </a>
                                <ul class="dropdown-menu">
                                    <li><button class="dropdown-item" type="button"><i class="bi bi-facebook"></i> facebook</button></li>
                                    <li><button class="dropdown-item" type="button"><i class="bi bi-twitter"></i> x'te paylaş</button></li>
                                    <li><button class="dropdown-item" type="button">entry link'ini kopyala</button></li>
                                    <li><button class="dropdown-item" type="button">entry no kopyala</button></li>
                                </ul>
                            </div>
                            @if (userId == titleWithEntryDto.UserId)
                            {
                                <div class="col d-flex justify-content-center align-items-center auth-entrance-link dropdown pe-2">
                                    <a class="auth-entrance-link-text pb-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        ...
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" type="button" asp-action="Index" asp-controller="UpdateEntry" asp-route-EntryId="@titleWithEntryDto.Id" >düzelt</a></li>
                                        <li><button class="dropdown-item" type="button">modlog</button></li>
                                        <li><button class="dropdown-item" type="button">sil</button></li>
                                        <li><button class="dropdown-item" type="button">profilime sabitle</button></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="col d-flex justify-content-center align-items-center auth-entrance-link dropdown pe-2">
                                    <a class="auth-entrance-link-text pb-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        ...
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><button class="dropdown-item" type="button">şikayet</button></li>
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- person icon,name  and date  -->
                <div class="row">
                    <div class="col-12 d-flex justify-content-end">
                        <div class="row ">
                            <div class="col-9">
                                <div class="row">
                                    <div class="col d-flex justify-content-end">
                                        <a href="#" type="button" class="person-name text-eksi">@titleWithEntryDto.UserName</a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col d-flex justify-content-end">
                                        <a href="#" type="button" class="person-name text-eksi-gray">@titleWithEntryDto.CreatedDate</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <a href="#" type="button"><i class="bi bi-person-circle person-cycle"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
}